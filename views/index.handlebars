<div class="container">
  <div class="row" id="burgerLists">
    
    {{!-- Uneaten Burgers --}}
    <div class="col-md-5 col-md-offset-1">
      <ul class="list-group" id="uneatenBurgers">
        {{#each burgers}}
        {{#unless devoured}}
        <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
            {{!-- Uneaten Burger Names --}}
            <div class="col-md-7">
              <li class="list-group-item burgerName">{{this.burger_name}}</li>
            </div>
            <!-- These must contain id as a data attribute so you can update the burger in database -->
            {{!-- Uneaten Burger Fields --}}
            <div class="col-md-3">
              <input data-id="{{this.id}}" type="text" name="customer_name" class="form-control customerField" id="customerName" placeholder="Customer?"></input>
            </div>
            {{!-- Uneaten Burger Buttons --}}
            <div class="col-md-2">
              <button data-id="{{this.id}}" class="eatBurger btn btn-default btn-xs">Devour It!</button>
            </div>
        </form>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- Eaten Burgers --}}
    <div class="col-md-5 col-md-offset-1">
      <ul class="list-group" id="eatenBurgers">
      {{#each burgers}}
      {{#if devoured}}
        <li class="list-group-item bg-light text-muted disabled burgerName">{{this.burger_name}} (Eaten by {{this.Customer.customer_name}} )</li>
      {{/if}}
      {{/each}}    
      </ul>
    </div>
  </div>

<!-- Burger Form
–––––––––––––––––––––––––––––––––––––––––––––––––– -->

<div class="container text-center">
  <div class="row" id="burgerForm">
    <div class="col-md-4 col-md-offset-4">
      <!-- Form that will post to /api/burgers -->
      <form id="burgerForm" action="/api/burgers" method="POST">
        <textarea id="userBurger" class="form-control" rows="5" name="burger_name" placeholder="Yummy Hamburger" required></textarea>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary" id="submitBurger"></i>Submit</button>
      </form>
    <p id="message">Enter a burger you want to eat and click the "submit" button.</p>
  </div>
</div>
</div>