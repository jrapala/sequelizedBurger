    <!-- Uneaten Burgers
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->

      <ul class="list-group" id="uneatenBurgers">
        {{#each burgers}}
          {{#unless devoured}}
          <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
            <li class="list-group-item">{{this.id}}. {{this.burger_name}}
                  <!-- Button must contain id as a data attribute so you can update the burger in database -->
                  <button data-id="{{this.id}}" class="pull-right eatBurger btn btn-default btn-xs">Devour It!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <!-- Eaten Burgers
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <div class="col-md-5">
      <ul class="list-group" id="eatenBurgers">
        {{#each burgers}}
          {{#if devoured}}
            <li class="list-group-item bg-light text-muted disabled">{{this.id}}. {{this.burger_name}}</li>
          {{/if}}
        {{/each}}    
      </ul>
    </div>
  </div>
</div>

